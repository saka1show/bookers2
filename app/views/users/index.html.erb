<div class="row mt-3">
<%= render '/books/sidebar', book: @book %>
<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr></tr>
        <tr>
          <th><%= image_tag(user.profile_image.presence || 'no_image.jpg', size:'100x100') %></th>
          <th><%= user.name %></th>
          <th><%= link_to "Show", user_path(user) %></th>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>
</div>