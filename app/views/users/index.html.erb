<div class="row mt-3">
<%= render '/books/sidebar', book: @book %>
<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <td>image</td>
          <td>name</td>
          <td></td>
          <td colspan="3"></td>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr></tr>
        <tr>
          <td><%= image_tag(user.profile_image.presence || 'no_image.jpg', size:'100x100') %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>
</div>