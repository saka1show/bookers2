<div class="col-md-3">
  <h2>User info</h2>
  <% if @user.present? %>
    <%= image_tag @user.get_profile_image(100,100) %>
    <table class="table">
      <tbody>
      <tr></tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
    </table>

    <a href=<%= edit_user_path(@user.id) %> class="btn btn-block btn-outline-secondary"><i class="fa-solid fa-user-gear"></i></a>

  <% else %>
    <p>No user information available.</p>
  <% end %>

  <h2 class="mt-3">New book</h2>

  <%= form_with model: book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Option</h4>
    <%= f.text_field :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>
